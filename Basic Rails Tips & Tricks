$(function() {
	$("#01").click('trigger',function(){
		$("#01").css({
			'background-color': random_color
		});
	});	
});

$(function() {
	$("document.body").click(function() {
		$("#01").each(function( i ) {
			if ( this.style.color !== "purple" ) {
      this.style."background-color" = random_color;
    } else {
      this.style.color = "";
    }
		});
	});	
});

