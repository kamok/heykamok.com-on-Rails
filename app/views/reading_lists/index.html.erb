<div id="adjust-down" class="container">

<h1>Listing Reading Lists</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reading_lists.each do |reading_list| %>
      <tr>
        <td><%= reading_list.body %></td>
        <td><%= link_to 'Show', reading_list %></td>
        <td><%= link_to 'Edit', edit_reading_list_path(reading_list) %></td>
        <td><%= link_to 'Destroy', reading_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reading list', new_reading_list_path %>
</div>
